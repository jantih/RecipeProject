<Window x:Class="MoreRecipeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeProjOma"
        mc:Ignorable="d"
        Title="Meal Plan | Recipe Project" Height="450" Width="800">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="191*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="30px"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TabControl Name="tabs" Grid.ColumnSpan="6" Grid.RowSpan="2">
            <TabItem Header="Plan a meal" Padding="10px 4px">
                <Grid HorizontalAlignment="Left" Width="794" Margin="4,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10px" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="83*"/>
                        <ColumnDefinition Width="36*"/>
                        <ColumnDefinition Width="118" />
                        <ColumnDefinition Width="0*" />
                        <ColumnDefinition Width="437*" />
                        <ColumnDefinition Width="10px" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10px" />
                        <RowDefinition Height="30px" />
                        <RowDefinition Height="5px" />
                        <RowDefinition Height="30px" />
                        <RowDefinition Height="32*" />
                        <RowDefinition Height="32*"/>
                        <RowDefinition Height="67*" />
                        <RowDefinition Height="62*" />
                        <RowDefinition Height="64*" />

                        <RowDefinition Height="30px" />
                        <RowDefinition Height="10px" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Plan your next meal" Grid.Row="1" Grid.Column="1" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="22"/>
                    <Label Content="Choose a recipe:" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>


                    <Button Name="planRecipe" Content="Choose" Grid.Row="9" Grid.Column="6" HorizontalAlignment="Left" Width="100" Margin="77,4,0,4" Click="planRecipe_Click"/>


                    <ListBox Name="allRecipes" Grid.Column="1" Grid.Row="3" Margin="0,27,10,0" Grid.RowSpan="6" Grid.ColumnSpan="4" SelectionChanged="ListBox_SelectionChanged">

                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                                <TextBox Text="{Binding RecipeId}" TextWrapping="Wrap" Width="120"/>
                                <TextBox Text="{Binding RecipeName}" TextWrapping="Wrap" Width="120"/>

                            </StackPanel>
                        </DataTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="New Recipe" Padding="10px 4px">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10px" />
                        <ColumnDefinition Width="45*" />
                        <ColumnDefinition Width="68*"/>
                        <ColumnDefinition Width="219*"/>
                        <ColumnDefinition Width="111*" />
                        <ColumnDefinition Width="332*" />
                        <ColumnDefinition Width="10px" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10px" />
                        <RowDefinition Height="30px" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10px" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" Padding="0 0 10px 0" VerticalAlignment="Center" Margin="43,0,0,0">Choose a name for your recipe:</TextBlock>
                    <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left"/>
                    <Label Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Grid.ColumnSpan="4" Margin="0,6,110,0">Available ingredients</Label>
                    <Label Grid.Row="2" Grid.Column="4" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="110,6,0,0">Chosen ingredients</Label>
                    <ListBox Name="ingredientListBox" Grid.Row="2" Grid.Column="1" Grid.RowSpan="10" Grid.ColumnSpan="4" Margin="0,32,110,32" SelectionChanged="ingredientListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.5,0.5" Width="15" >
                                    <StackPanel.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="-5.448"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </StackPanel.RenderTransform>
                                    <TextBlock Text="{Binding IngredientId}" Margin="2" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding IngredientName}" Margin="2" />

                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <TextBlock Text="TextBlock" TextWrapping="Wrap"/>
                        <TextBox Text="TextBox" TextWrapping="Wrap" Width="120"/>
                        <TextBox Text="TextBox" TextWrapping="Wrap" Width="120"/>
                    </ListBox>
                    <Label Content="Amount:" Grid.Row="4" Grid.Column="4" VerticalAlignment="Top" Margin="0,7,0,0" Grid.RowSpan="2"/>
                    <TextBox Name="amount" Grid.Row="5" Grid.Column="4" Margin="5,5,5,5"/>
                    <Button Name="addNewRecipe" Grid.Row="7" Grid.Column="4" Margin="10,2,10,2" Click="addNewRecipe_Click">Add</Button>
                    <Button Name="discardNewRecipe" Grid.Row="8" Grid.Column="4" Margin="10,2,10,2" Click="discardNewRecipe_Click">Discard</Button>
                    <TextBlock Name="recipeListBox" Grid.Row="2" Grid.Column="4" Grid.RowSpan="10" Grid.ColumnSpan="2" Margin="110,32,0,32"></TextBlock>
                </Grid>
            </TabItem>
            <TabItem Header="FoodStuffItems" Padding="10px 4px">
                <Label>Näytä kaikki kaapissa olevat ingredientit, muista lisätä uusi ikkuna ostohistorialle</Label>
            </TabItem>
            <TextBox Text="TextBox" TextWrapping="Wrap" Width="120"/>
        </TabControl>
        <Button Name="newIngredient" Grid.Row="2" Margin="10,2,10,2" Click="newIngredient_Click">New Ingredient</Button>
        <Button Name="showHistory" Grid.Row="2"  Grid.Column="1" Margin="10,2,10,2" Click="showHistory_Click">Show History</Button>
        <Button Content="Open connection" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="113" Click="Open_Connection_Click"/>
        <Button Content="Close connection" Grid.Column="5" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="113" Click="Close_Connection_Click"/>
    </Grid>
</Window>
